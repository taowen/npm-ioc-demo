{
    "compilerOptions": {
      "composite": true,
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "outDir": "lib",
      "baseUrl": ".",
      "paths": {
        "@plugin1": ["src/plugin1"],
        "@plugin2": ["src/plugin2"],
      }
    },
    "include": ["src"]
  }